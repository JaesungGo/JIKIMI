<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="org.scoula.chat.mapper.ChatBotMapper">

    <resultMap id="chatBotMap" type="org.scoula.chat.dto.ChatBotDTO">
        <result property="id" column="chatbot_no" />
        <result property="question" column="question"/>
        <result property="hitCount" column="hit_count"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="getByQuestion" resultMap="chatBotMap">
        select * from chatbot_tbl where question = #{question}
    </select>
    <select id="getPopularQuestions" resultType="org.scoula.chat.dto.ChatBotDTO">
        select * from chatbot_tbl order by hit_count desc limit #{limit}
    </select>

    <update id="incrementCacheHit">
        update chatbot_tbl set hit_count = hit_count +1 , updated_at = CURRENT_TIMESTAMP where chatbot_no = #{id}
    </update>

    <insert id="insertQuestion" parameterType="org.scoula.chat.dto.ChatBotDTO">
        insert into chatbot_tbl (question, answer,hit_count) values (#{question},#{answer},#{hitCount})
    </insert>

    <update id="updateQuestion" parameterType="org.scoula.chat.dto.ChatBotDTO">
        update chatbot_tbl set answer=#{answer} where chatbot_no = #{id}
    </update>

    <update id="syncHitCount">
        update chatbot_tbl set hit_count = #{hitCount} where question = #{question} and hit_count &lt; #{hitCount}
    </update>
</mapper>